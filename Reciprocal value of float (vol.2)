#include <iostream>
#include <stdio.h>
#include <bits/stdc++.h>

/* Load a float into the variable x from the keyboard. If it is reciprocal
value for x defined, print the contents of the variable x on the screen,
then calculate and then print the reciprocal. */

using namespace std;

int main(int argc,char** argv)
{
   float x, reciprocal;
   printf ("Load real number: ");
   scanf ("%f", &x);
   if (x!=0) {
   	   printf ("Loaded number is %f.\n", x);
       reciprocal=1/x;
       printf ("Reciprocal value of %f is %f.", x, reciprocal);
   }
   return 0;
}

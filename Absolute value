#include <iostream>
#include <stdio.h>
#include <bits/stdc++.h>

/* load an integer from the keyboard, then calculate the absolute value
of the loaded number, then print the loaded value and its value on the screen
absolute value */

using namespace std;

int main(int argc,char** argv)
{
    int x, result;
    printf ("Load integer: ");
    scanf ("%d", &x);
    result=x;
    if (result<0) {
    	result=result*(-1);
	}
	printf ("Loaded number is %d and its absolute value is %d.", x, result);
    return 0;
}
